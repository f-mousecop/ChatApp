<Page x:Class="ChatApp.Chat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatApp"
      xmlns:vm="clr-namespace:ChatApp.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Chat"
      Background="{DynamicResource WindowChromeBackgroundBrush}">


    <Page.Resources>
        <SolidColorBrush x:Key="WindowChromeBackgroundBrush" Color="Aqua" Opacity="0.8"/>
    </Page.Resources>

    <Border Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" FontSize="40" Text="Chat Page" HorizontalAlignment="Center"/>
            <StackPanel Grid.Row="1">
                <TextBox Name="txtValue"/>
                <WrapPanel Margin="0,10">
                    <TextBlock Text="Window Title: " FontWeight="Bold" FontSize="{StaticResource FontSizeRegular}"/>
                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                </WrapPanel>
                <WrapPanel Margin="0,10,0,0">
                    <TextBlock Text="Window dimensions: " FontWeight="Bold"/>
                    <TextBox Text="{Binding Width}" Width="50"/>
                    <TextBlock Text=" x "/>
                    <TextBox Text="{Binding Height}" Width="50"/>
                </WrapPanel>
                <Button Name="GoBack" Width="100" Height="40" Content="Go Back" Click="GoBack_Click"/>
                <Button Name="Navigate" Width="100" Height="40" Content="Navigate" Click="Navigate_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Page>
