<Page x:Class="ChatApp.Pages.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignUp"
      Background="{DynamicResource WindowsBackgroundBrush}">

    <Page.Resources>
        <LinearGradientBrush x:Key="WindowsBackgroundBrush">
            <GradientStop Offset="0" Color="MidnightBlue"/>
            <GradientStop Offset="1" Color="LightSlateGray"/>
        </LinearGradientBrush>
    </Page.Resources>

    <Border>
        <Grid>
            <!--<Grid.Background>

            </Grid.Background>-->
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    TextBlock.TextAlignment="Center">
                    <Border 
                        Background="WhiteSmoke" 
                        CornerRadius="10"
                        Padding="15,50,15,15"
                        Width="400"
                        Margin="50,50,50,0">

                        <StackPanel>
                            <TextBlock Text="Create an Account" 
                                       FontSize="40" 
                                       FontFamily="Arial"
                                       Foreground="CornflowerBlue"/>
                            <TextBlock Text="Email:" />
                            <TextBox />

                            <TextBlock Text="Username:" />
                            <TextBox />
                            <TextBlock Text="Password:" />
                            <TextBox />
                            <TextBlock Text="Confirm Password:" />
                            <TextBox />

                            <WrapPanel HorizontalAlignment="Center">
                                <Button Content="Next" Margin="10" Width="60" Height="30"/>
                                <Button Name="GoBack" Content="Go Back" Margin="10" Width="60" Height="30" Click="GoBack_Click"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Border>
</Page>
