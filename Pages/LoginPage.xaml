<Page x:Class="ChatApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatApp"
      xmlns:utils="clr-namespace:ChatApp.Utils"
      xmlns:viewModel="clr-namespace:ChatApp.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage"
      utils:OnLoadedCommand.LoadedCommand="{Binding ApplyThemeCommand}"
      >

    <Page.DataContext>
        <viewModel:LoginViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Page.Resources>
    <Page.Visibility>
        <Binding Path="IsViewVisible" Mode="TwoWay" Converter="{StaticResource BooleanToVisibility}"/>
    </Page.Visibility>
    <Border>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Sign In"                  
                    FontSize="40"
                    Foreground="#fff" />
                <StackPanel Grid.Row="1" Margin="15">
                    <TextBlock
                        FontSize="20"
                        Foreground="#fff"
                        Text="Username:" 
                        />
                    <Border CornerRadius="5" BorderThickness="1" BorderBrush="DarkGray" Background="#333">
                        <TextBox
                        Name="userNameBox"
                        Height="40"
                        Padding="10,5,0,0"
                        FontSize="20"
                        Foreground="#fff"
                        Background="Transparent"
                        BorderThickness="0"
                        MaxLength="36"   
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
                    </Border>
                </StackPanel>
                <StackPanel Grid.Row="2" Margin="15">
                    <TextBlock
                        FontSize="20"
                        Foreground="#fff"
                        Text="Password:"
                        />
                    <Border CornerRadius="5" BorderThickness="1" BorderBrush="DarkGray" Background="#333">
                        <PasswordBox
                            Name="passwordBox"
                            Height="40"
                            Padding="10,5,0,0"
                            FontSize="20"
                            Foreground="#fff"
                            Background="Transparent"
                            BorderThickness="0"
                            MaxLength="36"
                            utils:PasswordHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Border>

                    <WrapPanel HorizontalAlignment="Center" Margin="0,5,10,0">
                        <TextBlock Padding="0,0,5,0" HorizontalAlignment="Left" FontSize="14" Foreground="LightGray">
                            Don't have an account? <Hyperlink NavigateUri="SignUp.xaml">Sign up</Hyperlink>
                        </TextBlock>
                        <TextBlock Text="||" FontSize="14" Foreground="LightGray"/>
                        <TextBlock Padding="5,0,0,0" HorizontalAlignment="Right" FontSize="14">
                            <Hyperlink NavigateUri="ForgotPass.xaml">Forgot Password?</Hyperlink>
                        </TextBlock>
                    </WrapPanel>
                </StackPanel>
                <StackPanel
                    Grid.Row="3"
                    Margin="0,35"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        x:Name="UserLogin"
                        Content="Login"
                        Style="{StaticResource regularButtons}"
                        Command="{Binding LoginCommand}"
                        Height="40"
                        Width="100"
                        Margin="5">
                    </Button>
                    <Button
                        x:Name="Quit"
                        Command="{Binding QuitCommand}"
                        Content="Quit"   
                        Style="{StaticResource regularButtons}"
                        Height="40"
                        Width="100"
                        Margin="5">
                    </Button>
                </StackPanel>

                <RichTextBox 
                    Grid.Column="1"
                    IsReadOnly="True"                   
                    Grid.RowSpan="4"
                    Foreground="#fff"
                    Background="Transparent">
                    <FlowDocument>
                        <Paragraph FontSize="40">Welcome!</Paragraph>
                        <Paragraph FontSize="24">Please login</Paragraph>
                        <Paragraph>
                            <TextBox Text="{Binding ErrorMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                               Foreground="#d7596d"
                               FontSize="12"
                               FontWeight="Medium"
                               Margin="0,10,0,0"
                               TextWrapping="Wrap"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </Grid>
        </ScrollViewer>
    </Border>
</Page>
