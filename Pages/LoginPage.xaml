<Page x:Class="ChatApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      Title="LoginPage">

    <Border>
        <Grid Background="AliceBlue">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Sign In"
                FontFamily="Georgia"
                FontSize="40"
                Foreground="Black" />
            <StackPanel Grid.Row="1" Margin="15">
                <TextBlock
                    FontSize="20"
                    Foreground="Black"
                    Text="Username:" 
                    FontFamily="Georgia"/>
                <TextBox
                    Name="userNameBox"
                    Height="40"
                    Padding="10,5,0,0"
                    FontSize="20"
                    Foreground="Black"
                    MaxLength="36"
                    Text="{Binding Login.Username}" />
            </StackPanel>
            <StackPanel Grid.Row="2" Margin="15">
                <TextBlock
                    FontSize="20"
                    Foreground="Black"
                    Text="Password:"
                    FontFamily="Georgia"/>
                <PasswordBox
                    Name="passwordBox"
                    Height="40"
                    Padding="10,5,0,0"
                    FontSize="20"
                    Foreground="Black"
                    MaxLength="36"
                    LostFocus="passwordBox_LostFocus"/>
            </StackPanel>
            <StackPanel
                Grid.Row="3"
                Margin="0,35"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Name="UserLogin"
                    Click="UserLogin_Click"
                    Content="Login"
                    FontFamily="Georgia"
                    Margin="5"
                    Height="40"/>
                <Button
                    Width="100"
                    Name="Quit"
                    Click="Quit_Click"
                    Content="Quit"
                    FontFamily="Georgia"
                    Margin="5"
                    Height="40"/>
            </StackPanel>
            <RichTextBox 
                Grid.Column="1"
                IsReadOnly="True"
                Margin="10,20,0,10" 
                Grid.RowSpan="4"
                Foreground="Black"
                Background="AliceBlue">
                <FlowDocument FontFamily="Georgia">
                    <Paragraph FontSize="40">Welcome!</Paragraph>
                    <Paragraph FontSize="24">Please login</Paragraph>
                </FlowDocument>
            </RichTextBox>
        </Grid>
    </Border>
</Page>
