<UserControl x:Class="ChatApp.Components.Layout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Components" 
             xmlns:viewmodels="clr-namespace:ChatApp.ViewModels" 
             xmlns:components="clr-namespace:ChatApp.Components" 
             d:DataContext="{d:DesignInstance Type=viewmodels:LayoutViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <local:NavigationBar Grid.Row="0" Width="780" DataContext="{Binding NavigationBarViewModel}"/>

        <ContentControl 
            Grid.Row="1" 
            MaxWidth="1000"
            Margin="10"
            Content="{Binding ContentViewModel}"/>

    </Grid>
</UserControl>
