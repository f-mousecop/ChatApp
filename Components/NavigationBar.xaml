<UserControl x:Class="ChatApp.Components.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Components"
             xmlns:vm="clr-namespace:ChatApp.ViewModels" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DataContext="{d:DesignInstance Type=vm:NavigationBarViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>

    <Grid Margin="5 0 5 0" MaxWidth="1000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Column="0"
              VerticalAlignment="Center">
            <MenuItem Header="_File">
                <MenuItem Header="_Home" Command="{Binding NavigateHomeCommand}"/>
                <MenuItem Header="_Account"
                          Visibility="{Binding IsLoggedIn, Converter={StaticResource BoolToVisConverter}}">
                    <MenuItem Header="_Overview" Command="{Binding NavigateAccountCommand}"/>
                    <MenuItem Header="_Logout" Command="{Binding NavigateLogoutCommand}"/>
                </MenuItem>
                <MenuItem Header="_Close" Command="SystemCommands.CloseWindowCommand"/>
                <MenuItem Header="_Admin Panel" Command="{Binding NavigateAdminPanelCommand}"
                          Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisConverter}}"/>
            </MenuItem>
        </Menu>

        <Line Y1="5" Y2="45"
              Visibility="Visible"
              Stroke="Black" StrokeThickness="1"
              Grid.Column="1"/>

        <TextBlock 
            Grid.Column="1" 
            FontWeight="Bold"
            Margin="5"
            VerticalAlignment="Center"
            Style="{DynamicResource MaterialDesignHeadlineSmallTextBlock}"
            Text="{Binding CurrentUserAccount, UpdateSourceTrigger=PropertyChanged}"/>



        <StackPanel Orientation="Horizontal" Grid.Column="2" Margin="0 0 0 10">
            <Button HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    x:Name="homeButton"
                    Command="{Binding NavigateHomeCommand}"
                    Margin="15 10 0 0"
                    Width="80"
                    Height="30"
                    Content="Home" />

            <Button HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Command="{Binding NavigateChatCommand}"
                    Visibility="{Binding IsLoggedIn, Converter={StaticResource BoolToVisConverter}}"
                    Margin="15 10 0 0"
                    Width="80"
                    Height="30"
                    Content="Chat" />
            <Button HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Command="{Binding NavigateAccountCommand}"
                    Visibility="{Binding IsLoggedIn, Converter={StaticResource BoolToVisConverter}}"
                    Margin="15 10 0 0"
                    Width="80"
                    Height="30"
                    Padding="0"
                    Content="Account" />

            <Button HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Command="{Binding NavigateLoginCommand}"
                    Margin="15 10 0 0"
                    Width="80"
                    Height="30"
                    Visibility="{Binding IsNotLoggedIn, Converter={StaticResource BoolToVisConverter}}"
                    Content="Login"/>

            <Button HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Command="{Binding NavigateLogoutCommand}"
                    Margin="15 10 0 0"
                    Width="80"
                    Height="30"
                    Visibility="{Binding IsLoggedIn, Converter={StaticResource BoolToVisConverter}}"
                    Content="Logout" />
        </StackPanel>

        <StackPanel Grid.Column="3"
                    Orientation="Horizontal">
            <materialDesign:PopupBox IsEnabled="True" StaysOpen="True"
                                      PlacementMode="BottomAndAlignRightEdges">
                <Grid Width="200" Margin="8 8 8 8">
                    <Grid.Resources>
                        <Style TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignActionCheckBox}">
                            <Setter Property="Margin" Value="8 8 10 8"/>
                        </Style>

                        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
                            <Setter Property="Margin" Value="8 8 8 8"/>
                            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
                        </Style>
                    </Grid.Resources>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="0" 
                               Grid.Row="0" 
                               Margin="8 8 8 16"
                               Grid.ColumnSpan="2"
                               Text="Theme"
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                    <Separator Grid.Row="0"
                               Grid.ColumnSpan="3"
                               VerticalAlignment="Bottom"/>

                    <TextBlock Grid.Column="0" 
                               Grid.Row="1"
                               Text="Light"
                               HorizontalAlignment="Center"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"/>

                    <ToggleButton Grid.Column="1" 
                                  Grid.Row="1"
                                  Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                  IsChecked="{Binding IsDarkTheme, Mode=TwoWay}"/>

                    <TextBlock Grid.Column="2" 
                               Grid.Row="1"
                               Text="Dark"
                               HorizontalAlignment="Center"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                </Grid>
            </materialDesign:PopupBox>
        </StackPanel>
    </Grid>
</UserControl>
