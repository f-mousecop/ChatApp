<UserControl x:Class="ChatApp.Components.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Components"
             xmlns:vm="clr-namespace:ChatApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:NavigationBarViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d" 
             Background="{StaticResource CadetGrayBrush}"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="5 0 5 0" MaxWidth="1000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Column="0" Background="Transparent"
              VerticalAlignment="Center">
            <MenuItem Header="_File" AllowDrop="False">
                <MenuItem Header="_Admin Panel" Command="{Binding NavigateAdminPanelCommand}"/>
            </MenuItem>
        </Menu>

        <TextBlock 
            Grid.Column="1" 
            FontSize="{StaticResource FontSizeRegular}"
            Margin="5"
            VerticalAlignment="Center"
            Text="{Binding CurrentUserAccount, UpdateSourceTrigger=PropertyChanged}"/>


        <WrapPanel Grid.Column="2" Margin="0 0 0 10">
            <Button 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            x:Name="homeButton"
            Command="{Binding NavigateHomeCommand}"
            Margin="15 10 0 0"
            Width="80"
            Height="30"
            Style="{StaticResource regularButtons}"
            Content="Home" />

            <Button 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Command="{Binding NavigateChatCommand}"
            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}"
            Margin="15 10 0 0"
            Width="80"
                Height="30"
            Style="{StaticResource regularButtons}"
            Content="Chat" />
            <Button 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Command="{Binding NavigateAccountCommand}"
            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}"
            Margin="15 10 0 0"
            Width="80"
                Height="30"
            Style="{StaticResource regularButtons}"
            Content="Account" />

            <Button
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding NavigateLoginCommand}"
                Margin="15 10 0 0"
                Width="80"
                Height="30"
                Style="{StaticResource regularButtons}"
                Visibility="{Binding IsNotLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}"
                Content="Login"/>

            <Button 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Command="{Binding NavigateLogoutCommand}"
            Margin="15 10 0 0"
            Width="80"
                Height="30"
            Style="{StaticResource regularButtons}"
            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}"
            Content="Logout" />

        </WrapPanel>
    </Grid>
</UserControl>
