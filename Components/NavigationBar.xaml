<UserControl x:Class="ChatApp.Components.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Components"
             xmlns:vm="clr-namespace:ChatApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:NavigationBarViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Text="Chat App"/>

        <Button 
            Grid.Column="1" 
            Command="{Binding NavigateHomeCommand}"
            Content="Home" />
        <Button 
            Grid.Column="3" 
            Command="{Binding NavigateChatCommand}"
            Content="Chat" />
        <Button 
            Grid.Column="4" 
            Command="{Binding NavigateAccountCommand}"
            Content="Account" />
        <Button 
            Grid.Column="2" 
            Command="{Binding NavigateLoginCommand}"
            Content="Login" />
    </Grid>
</UserControl>
