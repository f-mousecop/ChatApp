<UserControl x:Class="ChatApp.Components.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Components"
             xmlns:vm="clr-namespace:ChatApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:NavigationBarViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d" 
             Background="IndianRed"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="20 10" MaxWidth="1000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock 
            Grid.Column="0" 
            FontSize="{StaticResource FontSizeRegular}"
            Margin="5"
            Text="Chat App"/>


        <Button 
            Grid.Column="1"
            x:Name="homeButton"
            Command="{Binding NavigateHomeCommand}"
            Margin="15 10 0 0"
            Width="60"
            Style="{StaticResource navButton}"
            Content="Home" />

        <Button 
            Grid.Column="2" 
            Command="{Binding NavigateChatCommand}"
            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}"
            Margin="15 10 0 0"
            Width="60"
            Style="{StaticResource navButton}"
            Content="Chat" />
        <Button 
            Grid.Column="3" 
            Command="{Binding NavigateAccountCommand}"
            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}"
            Margin="15 10 0 0"
            Width="60"
            Style="{StaticResource navButton}"
            Content="Account" />
        <Button 
            Grid.Column="4" 
            Command="{Binding NavigateLoginCommand}"
            Margin="15 10 0 0"
            Width="60"
            Style="{StaticResource navButton}"
            Content="Logout" />
    </Grid>
</UserControl>
