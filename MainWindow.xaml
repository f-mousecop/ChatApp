<Window x:Class="ChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp" xmlns:viewmodels="clr-namespace:ChatApp.ViewModels" xmlns:components="clr-namespace:ChatApp.Components" xmlns:custom="clr-namespace:ModalControl;assembly=ModalControl" xmlns:views="clr-namespace:ChatApp.Views" d:DataContext="{d:DesignInstance Type=viewmodels:WindowViewModel}"
        mc:Ignorable="d"
        x:Name="mainWindow"
        Title="Chat App" Height="700" Width="800"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Style="{DynamicResource CustomWindow}"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Border 
        x:Name="HostChrome"
        CornerRadius="{StaticResource WindowCornerRadius}"
        BorderThickness="{StaticResource WindowBorderThickness}"
        BorderBrush="{StaticResource WindowChromeBorderBrush}"
        Background="{Binding ShellBackground}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Grid Grid.Row="0" Background="Transparent"
                  MouseDown="Window_MouseDown">
                <Menu AllowDrop="True" Background="Transparent">
                    <MenuItem Header="_File" Margin="8" 
                              Cursor="Hand" FontSize="{StaticResource FontSizeSmall}"
                              Foreground="{StaticResource TeaGreenBrush}"
                              BorderBrush="{StaticResource CadetGrayBrush}"
                              BorderThickness="2 0 2 0">
                        <MenuItem Header="_Open" Foreground="Black"/>
                        <Separator/>
                        <MenuItem Header="_Exit" Foreground="Black"
                                  Click="Exit_Click"/>
                    </MenuItem>
                </Menu>
                <TextBlock Text="Chat App" HorizontalAlignment="Center"/>
                <WrapPanel HorizontalAlignment="Right" Margin="0 5 5 0">
                    <Button
                        x:Name="Minimize"
                        Content="-"
                        FontSize="{StaticResource FontSizeRegular}"
                        FontWeight="Bold"
                        Style="{StaticResource minButton}"
                        Foreground="#fff"
                        Margin="0 0 5 0"
                        Padding="0 0 0 5"
                        Click="Minimize_Click"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                    <Button 
                        x:Name="Exit" 
                        Content="X" 
                        FontSize="{StaticResource FontSizeSmall}"
                        Style="{StaticResource closeButton}"
                        Margin="0 0 20 0"
                        Foreground="#fff"
                        Click="Exit_Click"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                </WrapPanel>
            </Grid>


            <custom:Modal 
                Panel.ZIndex="100" 
                IsOpen="{Binding IsModalOpen}"
                Grid.Row="1">
                <ContentControl Content="{Binding CurrentModalViewModel}"/>
            </custom:Modal>

            <ContentControl
                Grid.Row="1"
                x:Name="main"
                Content="{Binding CurrentViewModel}">
            </ContentControl>
        </Grid>
    </Border>

</Window>
