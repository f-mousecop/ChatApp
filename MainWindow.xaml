<Window x:Class="ChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp" xmlns:viewmodels="clr-namespace:ChatApp.ViewModels" xmlns:components="clr-namespace:ChatApp.Components" xmlns:custom="clr-namespace:ModalControl;assembly=ModalControl" xmlns:views="clr-namespace:ChatApp.Views" d:DataContext="{d:DesignInstance Type=viewmodels:WindowViewModel}"
        mc:Ignorable="d"
        Title="Chat App" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Style="{StaticResource CustomWindow}"
        AllowsTransparency="True">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" Background="Transparent"
                  MouseDown="Window_MouseDown">
            <TextBlock Text="Chat App" HorizontalAlignment="Center"/>
            <WrapPanel HorizontalAlignment="Right" Margin="0 5 5 0">
                <Button
                    x:Name="Minimize"
                    Content="—"
                    FontSize="{StaticResource FontSizeSmall}"
                    Style="{StaticResource menuButton}"
                    Foreground="Yellow"
                        Margin="0 0 5 0"
                    Click="Minimize_Click"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                <Button 
                    x:Name="Exit" 
                    Content="X" 
                    FontSize="{StaticResource FontSizeSmall}"
                    Style="{StaticResource menuButton}"
                    Margin="0 0 20 0"
                    Foreground="Red"
                    Click="Exit_Click"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
            </WrapPanel>

        </Grid>


        <custom:Modal 
            Panel.ZIndex="100" 
            IsOpen="{Binding IsModalOpen}" 
            Grid.Row="1">
            <ContentControl Content="{Binding CurrentModalViewModel}"/>
        </custom:Modal>

        <ContentControl
                Grid.Row="1"
                x:Name="main"
                Content="{Binding CurrentViewModel}">
        </ContentControl>
    </Grid>

</Window>
