<Window x:Class="ChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp" 
        xmlns:viewmodels="clr-namespace:ChatApp.ViewModels" 
        xmlns:components="clr-namespace:ChatApp.Components" 
        xmlns:custom="clr-namespace:ModalControl;assembly=ModalControl" 
        xmlns:views="clr-namespace:ChatApp.Views" 
        d:DataContext="{d:DesignInstance Type=viewmodels:WindowViewModel}"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:utils="clr-namespace:ChatApp.Utils"
        mc:Ignorable="d"
        x:Name="mainWindow"
        Title="Chat App" Height="700" Width="800"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource CustomWindowCh}"
        utils:DwmShadow.Enable="True">

    <Window.CommandBindings>
        <CommandBinding 
            Command="{x:Static SystemCommands.MinimizeWindowCommand}"
            CanExecute="CommandBinding_CanExecute"
            Executed="CommandBinding_Executed"/>
        <CommandBinding
            Command="{x:Static SystemCommands.MaximizeWindowCommand}"
            CanExecute="CommandBinding_CanExecute"
            Executed="CommandBinding_Executed_2"/>
        <CommandBinding 
            Command="{x:Static SystemCommands.CloseWindowCommand}"
            CanExecute="CommandBinding_CanExecute"
            Executed="CommandBinding_Executed_1"/>
        <CommandBinding
            Command="{x:Static SystemCommands.RestoreWindowCommand}"
            CanExecute="CommandBinding_CanExecute"
            Executed="CommandBinding_Executed_3"/>
    </Window.CommandBindings>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>


    <Border Background="{Binding ShellBackground}">
        <Grid>
            <custom:Modal 
                Panel.ZIndex="100" 
                IsOpen="{Binding IsModalOpen}"
                >
                <ContentControl Content="{Binding CurrentModalViewModel}"/>
            </custom:Modal>

            <ContentControl
                
                x:Name="main"
                Content="{Binding CurrentViewModel}">
            </ContentControl>
        </Grid>
    </Border>
</Window>
