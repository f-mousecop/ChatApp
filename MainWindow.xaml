<Window x:Class="ChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp" xmlns:viewmodels="clr-namespace:ChatApp.ViewModels" xmlns:components="clr-namespace:ChatApp.Components" xmlns:custom="clr-namespace:ModalControl;assembly=ModalControl" xmlns:views="clr-namespace:ChatApp.Views" d:DataContext="{d:DesignInstance Type=viewmodels:WindowViewModel}"
        mc:Ignorable="d"
        x:Name="mainWindow"
        Title="Chat App" Height="700" Width="800"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Style="{DynamicResource CustomWindowCh}"
        Background="Transparent"
        AllowsTransparency="False">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Border 
        Background="{Binding ShellBackground}">
        <Grid>
            <!--<Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>-->


            <!--<Border CornerRadius="6 6 0 0"
                    BorderBrush="{StaticResource CitronBrush}"
                    BorderThickness="0 0 0 1"
                    Background="{StaticResource CadetGrayBrush}">
                <Grid Grid.Row="0"
                  Background="Transparent"
                  MouseDown="Window_MouseDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="0" Source="/Images/Logo/favicon_plan.ico" Margin="2 2 0 2"/>

                    <Menu Grid.Column="1" AllowDrop="True" Background="Transparent">
                        <MenuItem Header="_File" Margin="8" 
                              Cursor="Hand" FontSize="{StaticResource FontSizeSmall}"
                              Foreground="{StaticResource TeaGreenBrush}"
                              BorderBrush="{StaticResource CadetGrayBrush}"
                              BorderThickness="2 0 2 0">
                            <MenuItem Header="_Open" Foreground="Black"/>
                            <Separator/>
                            <MenuItem Header="_Exit" Foreground="Black"
                                  Click="Exit_Click"/>
                        </MenuItem>
                    </Menu>

                    <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                        <Button
                        x:Name="Minimize"
                        Content="-"
                        FontSize="{StaticResource FontSizeRegular}"
                        FontWeight="Bold"
                        Style="{StaticResource minButton}"
                        Foreground="#fff"
                        Margin="0 0 5 0"
                        Padding="0 0 0 5"
                        Click="Minimize_Click"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                        <Button
                        x:Name="Exit" 
                        Content="X" 
                        FontSize="{StaticResource FontSizeSmall}"
                        Style="{StaticResource closeButton}"
                        Margin="0 0 20 0"
                        Foreground="#fff"
                        Click="Exit_Click"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <TextBlock Grid.Row="0" Text="Chat App" HorizontalAlignment="Center"/>-->


            <custom:Modal 
                Panel.ZIndex="100" 
                IsOpen="{Binding IsModalOpen}"
                >
                <ContentControl Content="{Binding CurrentModalViewModel}"/>
            </custom:Modal>

            <ContentControl
                
                x:Name="main"
                Content="{Binding CurrentViewModel}">
            </ContentControl>
        </Grid>
    </Border>

</Window>
