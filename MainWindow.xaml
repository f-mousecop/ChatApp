<Window x:Class="ChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp" xmlns:viewmodels="clr-namespace:ChatApp.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:WindowViewModel}"
        mc:Ignorable="d"
        Title="Chat App" Height="550" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Frame 
            x:Name="main" 
            Content="{Binding CurrentPage, Converter={local:ApplicationPageValueConverter}}" 
            NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
