<UserControl x:Class="ChatApp.Views.AccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Views"
             xmlns:vm="clr-namespace:ChatApp.ViewModels" 
             xmlns:components="clr-namespace:ChatApp.Components"
             d:DataContext="{d:DesignInstance Type=vm:AccountViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="ReadOnlyCopyTextBox" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeRegular}"/>
            <Setter Property="IsReadOnlyCaretVisible" Value="False"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="TextBox_PreviewMouseLeftButtonDown"/>
            <EventSetter Event="GotKeyboardFocus" Handler="TextBox_GotKeyboardFocus"/>
        </Style>

        <!-- One row (Label | gap | Value | Copy -->
        <DataTemplate x:Key="FieldTemplate">
            <Grid Margin="0,8"
                  Grid.IsSharedSizeScope="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" SharedSizeGroup="LabelCol"/>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding Label}"
                           VerticalAlignment="Center"
                           FontSize="{StaticResource FontSizeRegular}"/>

                <TextBox x:Name="ValueBox"
                         Grid.Column="3"
                         Style="{StaticResource ReadOnlyCopyTextBox}"
                         VerticalAlignment="Center"
                         Text="{Binding Value}"
                         ToolTip="{Binding Value}">
                    <TextBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Command="ApplicationCommands.Copy" Click="MenuItem_Click"/>
                            <MenuItem Command="ApplicationCommands.SelectAll"/>
                        </ContextMenu>
                    </TextBox.ContextMenu>
                </TextBox>

                <!-- Copy button uses CommandTarget to copy from the TextBox -->
                <Button Grid.Column="4"
                        Command="{x:Static ApplicationCommands.Copy}"
                        CommandTarget="{Binding ElementName=ValueBox}"
                        Style="{StaticResource regularButtons}"
                        Width="40"
                        Height="20"
                        Margin="0 0 0 8">
                    Copy
                </Button>
                <Separator Grid.ColumnSpan="5" VerticalAlignment="Bottom"
                           Margin="0 20 0 0"
                           BorderBrush="CadetBlue"
                           BorderThickness="1"/>

            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Name="mainGrid"
          Focusable="True"
          Background="Transparent"
          Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="28" Text="Account" HorizontalAlignment="Center"/>

        <Grid Grid.Row="1" Margin="5 0 5 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Button Style="{StaticResource avatarButton}"
                        BorderThickness="1"
                        Command="{Binding OpenAvatarPopup}">
                    <Button.Background>
                        <ImageBrush ImageSource="{Binding CurrentUserAccount.AvatarImage}"
                                    Stretch="Fill"/>
                    </Button.Background>
                </Button>

                <Button Content="Change Avatar"
                        Background="{StaticResource CitronBrush}"
                        Foreground="Black"
                        FontSize="12"
                        Padding="5"
                        Style="{StaticResource regularButtons}"
                        Command="{Binding ChangeAvatarCommand}"/>
            </StackPanel>

            <StackPanel Grid.Column="2" 
                        Margin="0 0 0 30"
                        VerticalAlignment="Center">
                <TextBlock 
                    FontSize="18" 
                    Text="{Binding CurrentUserAccount.Username}"/>
                <TextBlock 
                    FontSize="{StaticResource FontSizeSmall}" 
                    Text="{Binding CurrentUserAccount.Email}"/>
            </StackPanel>
        </Grid>

        <Border Grid.Row="2" HorizontalAlignment="Stretch" Background="{StaticResource CyanDarkBrush}"
                Height="3"
                CornerRadius="5">
        </Border>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding AccountFields}"
                          ItemTemplate="{StaticResource FieldTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>


        <Border Grid.Row="4" HorizontalAlignment="Stretch" 
                VerticalAlignment="Top"
                Background="{StaticResource CyanDarkBrush}"
                Height="3"
                CornerRadius="5">
        </Border>

        <TextBlock Grid.Row="4" Margin="5" FontSize="{StaticResource FontSizeRegular}" Name="curr_Date_Time" />

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button  HorizontalAlignment="Center" 
                    Style="{StaticResource regularButtons}"
                    Width="100"
                    Height="50"
                    Command="{Binding NavigateChatCommand}"
                     Margin="10"
                    Content="Chat Now"/>
            <Button HorizontalAlignment="Center"
                    Style="{StaticResource regularButtons}"
                    Width="100"
                    Height="50"
                     Margin="10"                    
                    Command="{Binding NavigateHomeCommand}"
                    Content="Go Home"/>
            <Button HorizontalAlignment="Center"
                        Style="{StaticResource regularButtons}"
                        Width="100"
                        Height="50"
                     Margin="10"                   
                        Command="{Binding NavigateLogoutCommand}"
                        Content="Logout"/>
        </StackPanel>
    </Grid>
</UserControl>
