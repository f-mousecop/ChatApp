<UserControl x:Class="ChatApp.Views.AccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Views"
             xmlns:vm="clr-namespace:ChatApp.ViewModels" 
             xmlns:components="clr-namespace:ChatApp.Components"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DataContext="{d:DesignInstance Type=vm:AccountViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>

        <!-- One row (Label | gap | Value | Copy -->
        <DataTemplate x:Key="FieldTemplate">
            <Grid Margin="0,8"
                  Grid.IsSharedSizeScope="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" SharedSizeGroup="LabelCol"/>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding Label}"
                           VerticalAlignment="Center"
                           FontSize="{StaticResource FontSizeRegular}"/>

                <TextBox Grid.Column="3"
                         IsReadOnly="True"
                         FontSize="{StaticResource FontSizeRegular}"
                         BorderThickness="0"
                         VerticalAlignment="Center"
                         Text="{Binding Value}"
                         materialDesign:TransitionAssist.DisableTransitions="True">
                </TextBox>

                <!-- Copy button uses CommandTarget to copy from the TextBox -->
                <Button Grid.Column="4"
                        Command="{Binding DataContext.CopyCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding Value}"
                        Margin="0 0 0 8"
                        Padding="5">
                    Copy
                </Button>
                <Separator Grid.ColumnSpan="5" VerticalAlignment="Bottom"
                           Margin="0 20 0 0"
                           BorderBrush="{StaticResource MaterialDesignDarkSeparatorBackground}"
                           BorderThickness="1"/>

            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Name="mainGrid"
          Focusable="True"
          Background="Transparent"
          Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="28" Text="Account" HorizontalAlignment="Center"/>

        <Grid Grid.Row="1" Margin="5 0 5 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Button Style="{StaticResource avatarButton}"
                        BorderThickness="1"
                        Command="{Binding OpenAvatarPopup}"
                        Margin="0 0 0 5">
                    <Button.Background>
                        <ImageBrush ImageSource="{Binding CurrentUserAccount.AvatarImage}"
                                    Stretch="Fill"/>
                    </Button.Background>
                </Button>

                <Button Content="Change Avatar"
                        FontSize="12"
                        Height="30"
                        Command="{Binding ChangeAvatarCommand}"/>
            </StackPanel>

            <StackPanel Grid.Column="2" 
                        Margin="0 0 0 30"
                        VerticalAlignment="Center">
                <TextBlock 
                    FontSize="18" 
                    Text="{Binding CurrentUserAccount.Username}"/>
                <TextBlock 
                    FontSize="{StaticResource FontSizeSmall}" 
                    Text="{Binding CurrentUserAccount.Email}"/>
            </StackPanel>
        </Grid>

        <Border Grid.Row="2" HorizontalAlignment="Stretch" Background="{StaticResource MaterialDesignShadowBrush}"
                Height="3"
                CornerRadius="5">
        </Border>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding AccountFields}"
                          ItemTemplate="{StaticResource FieldTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>


        <Border Grid.Row="4" HorizontalAlignment="Stretch" 
                VerticalAlignment="Top"
                Background="{StaticResource MaterialDesignShadowBrush}"
                Height="3"
                CornerRadius="5">
        </Border>

        <TextBlock Grid.Row="4" Margin="5" FontSize="{StaticResource FontSizeRegular}" Name="curr_Date_Time" />


        <materialDesign:ColorZone Grid.Row="4"
                                  Mode="PrimaryDark">
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button  HorizontalAlignment="Center" 
            Width="100"
            Height="50"
            Command="{Binding NavigateChatCommand}"
             Margin="10"
            Content="Chat Now"/>
                <Button HorizontalAlignment="Center"
            Width="100"
            Height="50"
             Margin="10"                    
            Command="{Binding NavigateHomeCommand}"
            Content="Go Home"/>
                <Button HorizontalAlignment="Center"
                Width="100"
                Height="50"
             Margin="10"                   
                Command="{Binding NavigateLogoutCommand}"
                Content="Logout"/>
            </StackPanel>
        </materialDesign:ColorZone>

    </Grid>
</UserControl>
