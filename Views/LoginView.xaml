<UserControl x:Class="ChatApp.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Views" 
             xmlns:customControls="clr-namespace:ChatApp.CustomControls"
             xmlns:vm="clr-namespace:ChatApp.ViewModels" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:utils="clr-namespace:ChatApp.Utils"
             xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
             d:DataContext="{d:DesignInstance Type=vm:LoginViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>

    <Border Background="{DynamicResource WindowsBackgroundBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="{StaticResource CadetGrayBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="10"
                            Content="Sign In"                  
                            FontSize="{StaticResource FontSizeLarge}"
                            Foreground="#fff"/>

                        <Button Grid.Column="2"
                                ToolTip="Close"
                                Command="{Binding CloseModalCommand}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="5"
                                Width="24" Height="24"
                                Padding="0">
                            <materialDesign:PackIcon Kind="Close"/>
                        </Button>

                    </Grid>

                    <StackPanel Grid.Row="1" Margin="15 0 15 10">
                        <TextBox
                            Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                            materialDesign:HintAssist.Hint="Username"
                            materialDesign:HintAssist.IsFloating="True"
                            materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Height="28"
                            FontSize="{StaticResource FontSizeRegular}"
                            Foreground="#fff"
                            CaretBrush="LightGray"
                            BorderBrush="{StaticResource CadetGrayBrush}"
                            MaxLength="36"   
                            Margin="0 5 24 0"
                            Padding="30 0 0 0"
                            VerticalContentAlignment="Center">
                            <TextBox.Background>
                                <ImageBrush ImageSource="/Images/loginico.png"
                                            Stretch="None"
                                            AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>

                    </StackPanel>
                    <StackPanel Grid.Row="2" Margin="15 10 15 0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <customControls:BindablePassBox 
                                Grid.Column="0"
                                Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                IsPasswordVisible="{Binding ShowPassword, Mode=TwoWay}">
                            </customControls:BindablePassBox>

                            <ToggleButton Grid.Column="1"
                                          IsChecked="{Binding ShowPassword, Mode=TwoWay}"
                                          Focusable="False">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Grid>
                                                        <materialDesign:PackIcon x:Name="Icon"
                                                                                 Kind="Visibility"
                                                                                 Foreground="#fff"
                                                                                 Background="Transparent"
                                                                                 VerticalAlignment="Center"
                                                                                 Margin="2 0 0 0"
                                                                                 Width="22" Height="22"/>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Opacity" Value="0.6"/>
                                                            <Setter Property="Cursor" Value="Hand"/>
                                                        </Trigger>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="Icon" Property="Kind" Value="VisibilityOff"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                        </Grid>


                        <WrapPanel HorizontalAlignment="Center" Margin="0,15,10,0">
                            <TextBlock Text="Don't have an account?" 
                                       Padding="0,0,5,0" 
                                       HorizontalAlignment="Left"
                                       Foreground="LightGray">
                            </TextBlock>
                            <TextBlock Foreground="LightGray" Padding="0 0 5 0">
                                <Hyperlink Command="{Binding NavigateSignUpCommand}">Create Account</Hyperlink>
                            </TextBlock>
                            <materialDesign:PackIcon Kind="BorderVertical"
                                                     Height="15"
                                                     Width="2"
                                                     BorderBrush="LightGray"
                                                     BorderThickness="1"/>
                            <TextBlock Padding="5,0,0,0" HorizontalAlignment="Right">
                            <Hyperlink Command="{Binding NavigateToForgotPassCommand}">Forgot Password?</Hyperlink>
                            </TextBlock>
                        </WrapPanel>
                        <TextBox Text="{Binding ErrorMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#d7596d"
                                 Background="Transparent"
                                 Visibility="{Binding ShowErrorMessage, Converter={StaticResource BoolToVisConverter}}"
                                 HorizontalAlignment="Center"
                                 materialDesign:HintAssist.Hint=""
                                 FontSize="{StaticResource FontSizeSmall}"
                                 FontWeight="Medium"
                                 BorderBrush="Transparent"
                                 IsReadOnly="True"
                                 Focusable="False"
                                 BorderThickness="0"
                                 Margin="10 10 10 0"
                                 TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="3"
                        Margin="0,15"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            Content="Login"
                            Command="{Binding LoginCommand}"
                            Height="40"
                            Width="100"
                            Margin="5">
                        </Button>
                        <Button
                            Command="{Binding QuitCommand}"
                            Content="Quit"
                            Height="40"
                            Width="100"
                            Margin="5">
                        </Button>
                    </StackPanel>

                </Grid>
            </Border>
        </ScrollViewer>
    </Border>
</UserControl>
