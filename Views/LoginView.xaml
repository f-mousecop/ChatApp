<UserControl x:Class="ChatApp.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Views" 
             xmlns:customControls="clr-namespace:ChatApp.CustomControls"
             xmlns:vm="clr-namespace:ChatApp.ViewModels" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DataContext="{d:DesignInstance Type=vm:LoginViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>

    <Border Background="{DynamicResource WindowsBackgroundBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="{StaticResource CadetGrayBrush}"
                    BorderThickness="2"
                    CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="Sign In"                  
                        FontSize="40"
                        Foreground="#fff"/>

                        <Button Grid.Column="2"
                                ToolTip="Close"
                                Command="{Binding CloseModalCommand}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="5"
                                Padding="5">
                            <materialDesign:PackIcon Kind="Close"/>
                        </Button>

                    </Grid>

                    <StackPanel Grid.Row="1" Margin="15">
                        <TextBlock
                            FontSize="{StaticResource FontSizeRegular}"
                            Foreground="{StaticResource CadetGrayBrush}"
                            Text="Username:"
                            Margin="0 15 0 0"
                            />

                        <TextBox
                            Height="28"
                            FontSize="{StaticResource FontSizeRegular}"
                            Foreground="#fff"
                            CaretBrush="LightGray"
                            BorderBrush="{StaticResource CadetGrayBrush}"
                            MaxLength="36"   
                            Margin="0 5 22 0"
                            Padding="30 0 0 0"
                            VerticalContentAlignment="Center"
                            Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.Background>
                                <ImageBrush ImageSource="/Images/loginico.png"
                                            Stretch="None"
                                            AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>

                    </StackPanel>
                    <StackPanel Grid.Row="2" Margin="15">
                        <TextBlock
                            FontSize="{StaticResource FontSizeRegular}"
                            Foreground="{StaticResource CadetGrayBrush}"
                            Text="Password:"
                            Margin="0 15 0 0"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <customControls:BindablePassBox 
                                Grid.Column="0"
                                Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                IsPasswordVisible="{Binding ShowPassword, Mode=TwoWay}">
                            </customControls:BindablePassBox>

                            <ToggleButton Grid.Column="1"
                                          Width="22" Height="22"
                                          BorderThickness="0"
                                          IsChecked="{Binding ShowPassword, Mode=TwoWay}"
                                          Focusable="False">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border>
                                                        <Image x:Name="Icon"
                                                               Source="/Images/visibility_22dp.png"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Opacity" Value="0.6"/>
                                                            <Setter Property="Cursor" Value="Hand"/>
                                                        </Trigger>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="Icon" Property="Source"
                                                                    Value="/Images/visibility_off_22dp.png"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>

                        </Grid>


                        <WrapPanel HorizontalAlignment="Center" Margin="0,15,10,0">
                            <TextBlock Padding="0,0,5,0" 
                                       HorizontalAlignment="Left" 
                                       FontSize="14" 
                                       Foreground="LightGray">
                                    Don't have an account? 
                                <Hyperlink Command="{Binding NavigateSignUpCommand}"
                                           >Sign up</Hyperlink>
                            </TextBlock>

                            <TextBlock Text="||" FontSize="14" Foreground="LightGray"/>
                            <TextBlock Padding="5,0,0,0" HorizontalAlignment="Right" FontSize="14">
                            <Hyperlink Command="{Binding NavigateToForgotPassCommand}">Forgot Password?</Hyperlink>
                            </TextBlock>

                        </WrapPanel>
                        <TextBox Text="{Binding ErrorMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#d7596d"
                                 Background="Transparent"
                                 Visibility="{Binding ShowErrorMessage, Converter={StaticResource BoolToVisConverter}}"
                                 HorizontalAlignment="Center"
                                 FontSize="{StaticResource FontSizeRegular}"
                                 FontWeight="Medium"
                                 BorderBrush="Transparent"
                                 IsReadOnly="True"
                                 Focusable="False"
                                 BorderThickness="0"
                                 Margin="10"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="3"
                        Margin="0,35"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            Content="Login"
                            Command="{Binding LoginCommand}"
                            Height="40"
                            Width="100"
                            Margin="5">
                        </Button>
                        <Button
                            Command="{Binding QuitCommand}"
                            Content="Quit"
                            Height="40"
                            Width="100"
                            Margin="5">
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </ScrollViewer>
    </Border>
</UserControl>
