<UserControl x:Class="ChatApp.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Views" 
             xmlns:customControls="clr-namespace:ChatApp.CustomControls"
             xmlns:vm="clr-namespace:ChatApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:LoginViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="boolToVis"/>
    </UserControl.Resources>

    <Border Background="{DynamicResource WindowsBackgroundBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="{StaticResource CadetGrayBrush}"
                    BorderThickness="2"
                    CornerRadius="{StaticResource WindowCornerRadius}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="Sign In"                  
                        FontSize="40"
                        Foreground="#fff"/>
                    <StackPanel Grid.Row="1" Margin="15">
                        <TextBlock
                            FontSize="{StaticResource FontSizeRegular}"
                            Foreground="{StaticResource CadetGrayBrush}"
                            Text="Username:"
                            Margin="0 15 0 0"
                            />

                        <TextBox
                            Name="userNameBox"
                            Height="28"
                            FontSize="{StaticResource FontSizeRegular}"
                            Foreground="#fff"
                            CaretBrush="LightGray"
                            BorderBrush="{StaticResource CadetGrayBrush}"
                            BorderThickness="0 0 0 1"
                            MaxLength="36"   
                            Margin="0 5 0 0"
                            Padding="30 0 0 0"
                            VerticalContentAlignment="Center"
                            Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.Background>
                                <ImageBrush ImageSource="/Images/loginico.png"
                                            Stretch="None"
                                            AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>

                    </StackPanel>
                    <StackPanel Grid.Row="2" Margin="15">
                        <TextBlock
                            FontSize="{StaticResource FontSizeRegular}"
                            Foreground="{StaticResource CadetGrayBrush}"
                            Text="Password:"
                            Margin="0 15 0 0"/>

                        <customControls:BindablePassBox 
                                Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        </customControls:BindablePassBox>


                        <WrapPanel HorizontalAlignment="Center" Margin="0,5,10,0">
                            <TextBlock Padding="0,0,5,0" 
                                       HorizontalAlignment="Left" 
                                       FontSize="14" 
                                       Foreground="LightGray">
                                    Don't have an account? 
                                <Hyperlink Command="{Binding NavigateSignUpCommand}"
                                           >Sign up</Hyperlink>
                            </TextBlock>

                            <TextBlock Text="||" FontSize="14" Foreground="LightGray"/>
                            <TextBlock Padding="5,0,0,0" HorizontalAlignment="Right" FontSize="14">
                            <Hyperlink Command="{Binding NavigateToForgotPassCommand}">Forgot Password?</Hyperlink>
                            </TextBlock>

                        </WrapPanel>
                        <TextBox Text="{Binding ErrorMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#d7596d"
                                 Background="Transparent"
                                 Visibility="{Binding ShowErrorMessage, Converter={StaticResource boolToVis}}"
                                 HorizontalAlignment="Center"
                                 FontSize="{StaticResource FontSizeRegular}"
                                 FontWeight="Medium"
                                 BorderBrush="Transparent"
                                 IsReadOnly="True"
                                 Focusable="False"
                                 BorderThickness="0"
                                 Margin="10"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="3"
                        Margin="0,35"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            x:Name="UserLogin"
                            Content="Login"
                            Style="{StaticResource regularButtons}"
                            Command="{Binding LoginCommand}"
                            Height="40"
                            Width="100"
                            Margin="5">
                        </Button>
                        <Button
                            x:Name="Quit"
                            Command="{Binding QuitCommand}"
                            Content="Quit"   
                            Style="{StaticResource regularButtons}"
                            Height="40"
                            Width="100"
                            Margin="5">
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </ScrollViewer>
    </Border>
</UserControl>
