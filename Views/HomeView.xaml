<UserControl x:Class="ChatApp.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Views"
             xmlns:vm="clr-namespace:ChatApp.ViewModels"
             xmlns:components="clr-namespace:ChatApp.Components"
             d:DataContext="{d:DesignInstance Type=vm:HomeViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Border Background="{DynamicResource WindowsBackgroundBrush}" CornerRadius="{StaticResource WindowCornerRadius}">


        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" FontSize="28" Text="Account" HorizontalAlignment="Center"/>
            <TextBlock Grid.Row="0" Margin="0 10 20 0" 
                       HorizontalAlignment="Right" 
                       FontSize="{StaticResource FontSizeRegular}" 
                       Name="curr_Date_Time" 
                       />

            <StackPanel Grid.Row="1" Margin="5" HorizontalAlignment="Center">
                <TextBlock Margin="10" FontSize="{StaticResource FontSizeLarge}" Text="{Binding CurrentUserAccount.DisplayName}"/>
                <TextBlock Margin="10" FontSize="{StaticResource FontSizeLarge}" Text="{Binding CurrentUserAccount.Email}"/>
            </StackPanel>
            <StackPanel 
                Orientation="Horizontal" 
                Grid.Row="2"
                HorizontalAlignment="Center">

                <Button Margin="5" 
                    Style="{StaticResource regularButtons}"
                    Width="100"
                    Height="50"
                    Command="{Binding NavigateAccountCommand}"
                    Content="View Account"
                    Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Button Margin="5" 
                    Style="{StaticResource regularButtons}"
                    Width="100"
                    Height="50"
                    Command="{Binding NavigateChatCommand}"
                    Content="Chat Now"
                    Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
            <Button 
                Grid.Row="3"
                HorizontalAlignment="Center"
                Style="{StaticResource regularButtons}"
                Width="100"
                Height="50"
                Command="{Binding NavigateLoginCommand}"
                Content="Login"
                Margin="5"
                Visibility="{Binding IsNotLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        </Grid>

    </Border>
</UserControl>
