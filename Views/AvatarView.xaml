<UserControl x:Class="ChatApp.Views.AvatarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Views"
             xmlns:vm="clr-namespace:ChatApp.ViewModels" 
             d:DataContext="{d:DesignInstance Type=vm:AvatarViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="{DynamicResource MaterialDesignShadowBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Grid.Row="0">
            <Grid>
                <Button ToolTip="Close"
                        Style="{StaticResource closeMenuButton}"
                        Command="{Binding CloseAvatarModalCommand}"
                        HorizontalAlignment="Right">
                    <Path Stroke="#fff"  
                              StrokeThickness="1.5"
                              Width="10" Height="10"
                              Data="M0,0 L10,10 M0,10 L10,0"/>
                </Button>
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Margin="30 10 30 42"
                BorderThickness="1"
                BorderBrush="DimGray"
                CornerRadius="2">
            <Image Source="{Binding CurrentUserAccount.AvatarImage}"
                   MaxWidth="750" MaxHeight="450"/>
        </Border>
    </Grid>

</UserControl>
