<UserControl x:Class="ChatApp.Views.SignUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Views"
             xmlns:vm="clr-namespace:ChatApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:SignUpViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="{DynamicResource WindowsBackgroundBrush}">
        <Grid>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                TextBlock.TextAlignment="Center"
                TextBlock.LineHeight="10">
                    <Border 
                    Background="WhiteSmoke" 
                    CornerRadius="10"
                    Padding="15,50,15,15"
                    Width="400"
                    Margin="50,50,50,50">

                        <StackPanel>
                            <TextBlock Text="Create an Account" 
                                   FontSize="40"/>
                            <Line Stroke="Black" StrokeThickness="2" X1="400" Margin="0,0,0,10"/>
                            <TextBlock Text="Email:" />
                            <TextBox Margin="0,0,0,5" Padding="2"/>

                            <TextBlock Text="Username:" />
                            <TextBox Margin="0,0,0,5" Padding="2"/>
                            <TextBlock Text="Password:" />
                            <TextBox Margin="0,0,0,5" Padding="2"/>
                            <TextBlock Text="Confirm Password:" />
                            <TextBox Margin="0,0,0,5" Padding="2"/>

                            <WrapPanel HorizontalAlignment="Center">
                                <Button Content="Next" Margin="10" Width="80" Height="40"/>
                                <Button Name="GoBack" Content="Go Back" Margin="10" Width="80" Height="40" Command="{Binding NavBackCommand}"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
