<UserControl x:Class="ChatApp.Views.SignUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Views"
             xmlns:vm="clr-namespace:ChatApp.ViewModels" 
             xmlns:customControls="clr-namespace:ChatApp.CustomControls"
             d:DataContext="{d:DesignInstance Type=vm:SignUpViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="boolToVis"/>
    </UserControl.Resources>
    <Border>
        <Grid>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                TextBlock.TextAlignment="Center"
                TextBlock.LineHeight="10">
                    <Border 
                    Background="WhiteSmoke" 
                    CornerRadius="10"
                    Padding="15,50,15,15"
                    Width="400"
                    Margin="50,50,50,50">

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="Create an Account" 
                                   FontSize="40"/>
                                <Line Stroke="Black" StrokeThickness="2" X1="400" Margin="0,0,0,10"/>
                                <Label Content="First Name:" />
                                <TextBox Margin="0,0,0,5" Padding="2"
                                         Text="{Binding Firstname, UpdateSourceTrigger=PropertyChanged}"/>
                                <Label Content="Last Name:" />
                                <TextBox Margin="0,0,0,5" Padding="2"
                                         Text="{Binding Lastname, UpdateSourceTrigger=PropertyChanged}"/>
                                <Label Content="Username:" />
                                <TextBox Margin="0,0,0,5" Padding="2"
                                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                                <Label Content="Email:" />
                                <TextBox Margin="0,0,0,5" Padding="2"
                                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                                <Label Content="Mobile Number:" />
                                <TextBox Margin="0,0,0,5" Padding="2"
                                         Text="{Binding MobileNumber, UpdateSourceTrigger=PropertyChanged}"/>

                                <Label Content="Password:" />

                                <customControls:SignupBindablePassBox
                                    Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                </customControls:SignupBindablePassBox>

                                <Label Content="Confirm Password:" />
                                <customControls:SignupBindablePassBox
                                    Password="{Binding ConfirmPass, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                </customControls:SignupBindablePassBox>

                                <WrapPanel HorizontalAlignment="Center">
                                    <Button
                                        x:Name="UserSignup"
                                        Content="Create Account" Margin="10" 
                                        Style="{StaticResource regularButtons}"
                                        Width="80" Height="40" 
                                        Command="{Binding SubmitCommand}"/>
                                    <Button Name="GoBack" Content="Go Back" 
                                        Style="{StaticResource regularButtons}"
                                        Margin="10" Width="80" 
                                        Height="40" 
                                        Command="{Binding NavigateBackCommand}"/>
                                </WrapPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
