<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Styles/Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <ImageBrush x:Key="HomeImageBrush"
                ImageSource="/Images/Picture1.jpg"
                Stretch="UniformToFill"/>

    <DrawingBrush x:Key="HomeShellBrush"
                  Stretch="UniformToFill"
                  TileMode="None">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <ImageDrawing Rect="0,0,1,1" ImageSource="/Images/Picture1.jpg"/>
                <GeometryDrawing Geometry="M0,0 L1,0 1,1 0,1 Z">
                    <GeometryDrawing.Brush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.6">
                            <GradientStop Offset="0" Color="#0f172a"/>
                            <GradientStop Offset="0.5" Color="#333"/>
                            <GradientStop Offset="1" Color="#6b21a8"/>
                        </LinearGradientBrush>
                    </GeometryDrawing.Brush>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>
</ResourceDictionary>