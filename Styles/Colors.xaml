<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="WindowsBackgroundBrush">
        <GradientStop Offset="0" Color="#0f172a"/>
        <GradientStop Offset="2" Color="#333"/>
        <GradientStop Offset="2" Color="#6b21a8"/>
    </LinearGradientBrush>

    <Color x:Key="BackgroundDark">#0f172a</Color>
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>

    <Color x:Key="BackgroundGray">#333</Color>
    <SolidColorBrush x:Key="BackgroundGrayBrush" Color="{StaticResource BackgroundGray}"/>

    <Color x:Key="ForegroundLight">#ffff</Color>
    <SolidColorBrush x:Key="ForegroundLightBrush" Color="{StaticResource ForegroundLight}"/>
</ResourceDictionary>