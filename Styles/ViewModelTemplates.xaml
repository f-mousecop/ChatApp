<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ChatApp"
                    xmlns:vm="clr-namespace:ChatApp.ViewModels"
                    xmlns:views="clr-namespace:ChatApp.Views" xmlns:components="clr-namespace:ChatApp.Components">

    <DataTemplate DataType="{x:Type vm:LoginViewModel}">
        <views:LoginView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ChatViewModel}">
        <views:ChatView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:SignUpViewModel}">
        <views:SignUpView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:AccountViewModel}">
        <views:AccountView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:HomeViewModel}">
        <views:HomeView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:LayoutViewModel}">
        <components:Layout/>
    </DataTemplate>
</ResourceDictionary>